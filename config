exec --no-startup-id /usr/bin/feh --bg-scale /home/cheukyin699/Pictures/nature.jpg

# Custom commands
exec --no-startup-id setxkbmap -layout us,us -variant ,colemak -option grp:alt_shift_toggle
exec --no-startup-id compton -f

hide_edge_borders both
new_window 1pixel

# Custom bindings
# Screen locking
bindsym $mod+shift+x exec dm-tool lock
# Volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
# Print screen
bindsym Print exec --no-startup-id scrot ~/Pictures/Screenshot-$(date +%Y-%m-%d_%H-%M-%S).png
bindsym --release $mod+Print exec --no-startup-id scrot -s ~/Pictures/Screenshot-$(date +%Y-%m-%d_%H-%M-%S).png
# Gnome Settings Daemon
exec --no-startup-id /usr/lib/gnome-settings-daemon/gnome-settings-daemon
